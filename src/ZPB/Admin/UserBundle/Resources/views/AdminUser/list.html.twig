{% extends "ZPBAdminUserBundle:Layouts:adminuser.master.html.twig" %}

{% block page_small_title %}Liste{% endblock %}
{% set active_mainsidebar = "list" %}

{% block content %}
    <table class="table table-striped table-hover">
        <thead>
        <tr>
            <th>#id</th>
            <th>Pr√©nom</th>
            <th>Nom</th>
            <th>Email</th>
            <th>Pseudo</th>
            <th>Roles</th>
            <th>Modifier</th>
            <th>Supprimer</th>
        </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.firstname }}</td>
                <td>{{ user.lastname }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.username }}</td>
                <td>{% for role in user.rolesCollection %}{{ role.readableName }}{% if loop.last != true %}, {% endif %}{% endfor %}</td>
                {% if user.isSuperAdmin%}
                    <td> - </td>
                    <td> - </td>
                {% else %}
                    <td><a href="{{ path("zpb_admin_user_update", {id: user.id}) }}" class="btn btn--default"><span class="icon-054"></span></a></td>
                    <td><a href="{{ path("zpb_admin_user_delete", {id: user.id, _token:csrf_token("delete_user")}) }}" class="btn btn--danger"><span class="icon-030"></span></a></td>
                {% endif %}

            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
