{% extends "ZPBAdminUserBundle:Layouts:adminuser.master.html.twig" %}

{% block page_small_title %}Enregistrement{% endblock %}
{% set active_mainsidebar = "register" %}

{% block content %}
    <div class="row">
        <div class="column-6">
            {{ form_start(form) }}

            <div class="form__row {% if form.firstname.vars.errors|length > 0 %}has-errors{% endif %}">
                {{ form_label(form.firstname, null, {"label_attr":{"class":"form__label"}})}}
                {{ form_widget(form.firstname, {"attr":{"class":"form__field", "placeholder":form.firstname.vars.label}})}}
                <div class="form__field__errors">
                    {{ form_errors(form.firstname)}}
                </div>
            </div>

            <div class="form__row {% if form.lastname.vars.errors|length > 0 %}has-errors{% endif %}">
                {{ form_label(form.lastname, null, {"label_attr":{"class":"form__label"}})}}
                {{ form_widget(form.lastname, {"attr":{"class":"form__field", "placeholder":form.lastname.vars.label}})}}
                <div class="form__field__errors">
                    {{ form_errors(form.lastname)}}
                </div>
            </div>

            <div class="form__row {% if form.civilite.vars.errors|length > 0 %}has-errors{% endif %}">
                {{ form_label(form.civilite, null, {"label_attr":{"class":"form__label"}}) }}
                {{ form_widget(form.civilite, {attr: {class: "form__field"}}) }}
                <div class="form__field__errors">
                    {{ form_errors(form.civilite) }}
                </div>
            </div>

            <div class="form__row {% if form.email.vars.errors|length > 0 %}has-errors{% endif %}">
                {{ form_label(form.email, null, {"label_attr":{"class":"form__label"}})}}
                {{ form_widget(form.email, {"attr":{"class":"form__field", "placeholder":form.email.vars.label}})}}
                <div class="form__field__errors">
                    {{ form_errors(form.email)}}
                </div>
            </div>

            <div class="form__row {% if form.username.vars.errors|length > 0 %}has-errors{% endif %}">
                {{ form_label(form.username, null, {"label_attr":{"class":"form__label"}})}}
                {{ form_widget(form.username, {"attr":{"class":"form__field", "placeholder":form.username.vars.label}})}}
                <div class="form__field__errors">
                    {{ form_errors(form.username)}}
                </div>
            </div>

            <div class="form__row {% if form.plain_password.vars.errors|length > 0 %}has-errors{% endif %}">
                {{ form_label(form.plain_password, null, {"label_attr":{"class":"form__label"}})}}
                {{ form_widget(form.plain_password, {"attr":{"class":"form__field", "placeholder":form.plain_password.vars.label}})}}
                <div class="form__field__errors">
                    {{ form_errors(form.plain_password)}}
                </div>
            </div>

            <div class="form__row {% if form.roles.vars.errors|length > 0 %}has-errors{% endif %}">
                {{ form_label(form.roles) }}
                {{ form_widget(form.roles, {attr: {class: "form__checkbox"}}) }}
                <div class="form__field__errors">
                    {{ form_errors(form.roles) }}
                </div>
            </div>

            <div class="form__row">
                {{ form_widget(form.save, {"attr":{class:"flat-btn btn--default"}})}}
            </div>
            {{ form_end(form) }}
        </div>
        <div class="column-6"></div>
    </div>

{% endblock %}
