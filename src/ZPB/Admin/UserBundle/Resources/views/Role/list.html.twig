{% extends "ZPBAdminUserBundle:Layouts:adminuser.master.html.twig" %}

{% block page_small_title %}Liste des r√¥les{% endblock %}
{% set active_mainsidebar = "list_role" %}

{% block content %}
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>#id</th>
                <th>Nom</th>
                <th>Nom d'usage</th>
                <th>Editer</th>
                <th>Supprimer</th>
            </tr>
        </thead>
        <tbody>
            {% for role in roles %}
                <tr>
                    <td>{{ role.id }}</td>
                    <td>{{ role.name }}</td>
                    <td>{{ role.readableName }}</td>
                    <td><a class="btn btn--default" href="{{ path("zpb_admin_roles_edit", {id: role.id}) }}"><span class="icon-054"></span></a></td>
                    <td><a class="btn btn--danger delete-alert" href="{{ path("zpb_admin_roles_delete", {id: role.id, _token: csrf_token("delete_role")}) }}" data-name="{{ role.readableName }}"><span class="icon-030"></span></a></td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}

{% block footScripts%}
    {{ parent() }}
    <script src="/js/admin/delete_alert.js"></script>
{% endblock %}
